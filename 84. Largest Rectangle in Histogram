class Solution:
    def largestRectangleArea(self, heights: List[int]) -> int:
        maxarea = 0
        stack = []

        for idx, h in enumerate(heights):
            current = idx
            while stack and stack[-1][1] > h:
                pidx, ph = stack.pop()
                maxarea = max(maxarea, ph* (idx - pidx))
                current = pidx
            stack.append((current, h ))
        
        for i, h in stack:
            maxarea = max(maxarea, h* (len(heights) - i))
        return maxarea
